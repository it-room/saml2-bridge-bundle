{
  "name": "adactive-sas/saml2-bridge-bundle",
  "description": "Symfony bundle that provide a SAML Identity Provider (idp).",
  "keywords": [
    "adactiveSas",
    "SAML",
    "SAML2",
    "idp",
    "identity-provider",
    "saml-idp",
    "Symfony",
    "Bundle",
    "symfony-bundle",
    "bridge"
  ],
  "type": "symfony-bundle",
  "license": "GPL-3.0-or-later",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "moroine",
      "email": "moroine.bentefrit@adactive.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-openssl": "*",
    "simplesamlphp/saml2": "^4.6.11",
    "symfony/framework-bundle": "^5.4",
    "symfony/workflow": "^5.2|^6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7.17",
    "symfony/phpunit-bridge": "^v5.4 || ^6.0",
    "liip/functional-test-bundle": "^1.7",
    "twig/twig": "^2.12|^3.0",
    "satooshi/php-coveralls": "^2.0.0"
  },
  "autoload": {
    "psr-4": {
      "AdactiveSas\\Saml2BridgeBundle\\": "src"
    }
  }
}
